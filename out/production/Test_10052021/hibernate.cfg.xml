<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/htmh</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>

        <mapping class="POJO.GiaoVu"/>
        <mapping resource="GiaoVu.hbm.xml"/>
        <mapping class="POJO.HocKy"/>
        <mapping resource="HocKy.hbm.xml"/>
        <mapping class="POJO.HocPhanDK"/>
        <mapping resource="HocPhanDK.hbm.xml"/>
        <mapping class="POJO.HocPhanMo"/>
        <mapping resource="HocPhanMo.hbm.xml"/>
        <mapping class="POJO.KyDKHP"/>
        <mapping resource="KyDKHP.hbm.xml"/>
        <mapping class="POJO.LopHoc"/>
        <mapping resource="LopHoc.hbm.xml"/>
        <mapping class="POJO.MonHoc"/>
        <mapping resource="MonHoc.hbm.xml"/>
        <mapping class="POJO.SinhVien"/>
        <mapping resource="SinhVien.hbm.xml"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>